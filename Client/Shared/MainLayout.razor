@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Micro Weather
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen" ClipMode="drawerClipMode">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen = true;
    DrawerClipMode drawerClipMode = DrawerClipMode.Always;

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}